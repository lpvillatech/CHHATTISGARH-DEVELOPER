<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.villatech.nationalbirdquiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.villatech.nationalbirdquiz.ui.ImageModeScreen"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.villatech.nationalbirdquiz.ui.ModeScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.villatech.nationalbirdquiz.ui.TextOptionModeScreen"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>